<div class="navbar-routine">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo.png", class: "navbar-routine-brand-img" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-routine-right hidden-xs hidden-sm">

    <!-- Different navigation if user logged in or not -->
    <div class="nav navbar-nav navbar-right carret">
      <% if user_signed_in? %>
        <!-- Profile picture and dropdown -->
        <div class="navbar-routine-item">
          <div class="dropdown">
            <%= image_tag avatar_url(current_user), class: "avatar-large dropdown-toggle", id: "navbar-routine-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-routine-dropdown-menu">
              <li>
                <%= link_to "Edit Profile", edit_user_registration_path(current_user) %>
              </li>
              <li>
                <%= link_to "My Routines", routines_path %>
              </li>
              <li>
                <%= link_to "Add a Routine", new_routine_path %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= t(".sign_out", default: "Log Out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <% else %>
      <%= link_to "Sign Up", new_user_registration_path, {class: "navbar-routine-item navbar-routine-link"} %>
      <%= link_to "Log In", new_user_session_path, {class: "navbar-routine-item navbar-routine-link"} %>

      <% end %>
    </div>
  </div>
</div>
