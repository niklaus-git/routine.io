<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <ul class="timeline">
          <li>
            <div class="timeline-image">
              <%= image_tag "icon_howto_1.png", class: "img-fluid img-howto" %>
            </div>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <h3>Create a new Routine</h3>
                <p class="text-muted">It's free, easy to use and a flexible form that allows you to add and remove fields based on the information you would like to track.</p>
              </div>
            </div>
          </li>
          <li class="timeline-inverted">
            <div class="timeline-image">
              <%= image_tag "icon_howto_2.png", class: "img-fluid img-howto" %>
            </div>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <h3>Log your Daily Activities</h3>
                <p class="text-muted">Once your new Routine is created, you can start tracking and improve your motivation and ability to complete a habit each day.</p>
              </div>
            </div>
          </li>
          <li>
            <div class="timeline-image">
              <%= image_tag "icon_howto_3.png", class: "img-fluid img-howto" %>
            </div>
            <div class="timeline-panel">
              <div class="timeline-heading">
                <h3>Achieve Higher Effectiveness</h3>
                <p class="text-muted">Collect data on your the habits you track, create new triggers for yourself and master your goals.</p>
              </div>
            </div>
          </li>
          <li class="timeline-inverted">
            <div class="timeline-image" id="timeline-image-link">
            <%= link_to new_routine_path do %>
              <h3 style="padding-top: 5px; line-height: 25px;" class="link-h3">Create
                <br>your new
                <br>Routine!</h3>
                <% end %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
