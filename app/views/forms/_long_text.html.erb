<li id=<%= "#{question.id}" %> class="question-item inactive long-text">

  <!-- Question Header -->
  <%= render 'forms/qheader', question: question %>

  <!-- User Input -->
  <div class="textarea">
    <span class="question-tip">
      Press <strong>SHIFT + ENTER</strong> to add a paragraph
    </span>
    <textarea autocomplete="off" name=<%= "#{question.id}"%> ><%= Field.stored_answer(@answer.id, question.id) if defined?(@answer) %></textarea>
  </div>

  <div class="btn-enter">press <strong>ENTER</strong></div>

</li>
